<h1> Create New Cat </h1>

<form action = "<%= cats_url %>" method ="post">
    <label for = "name">Name</label>    
    <input type="text" id="name" name="cat[name]" value="<%= @cat.name%>">
    
    <label for = "birth_date">Birth_Date </label>
    <input type="text" id="birth_date" name="cat[birth_date]" value="<%= @cat.birth_date%>">

    <label for="color">Color</label>
    <select id="color" name="cat[color]">
        <option disabled <%= @cat.color ? "" : "selected"%>>-- Please Select --</option>
        <option value="orange" <%= @cat.color == "orange" ? "selected" : ""%> >Orange</option>
        <option value="black" <%= @cat.color == "black" ? "selected" : ""%>>Black</option>
        <option value="grey" <%= @cat.color == "grey" ? "selected" : ""%>>Grey</option>
        <option value="white" <%= @cat.color == "white" ? "selected" : ""%>>White</option>
        <option value="yellow" <%= @cat.color == "yellow" ? "selected" : ""%>>Yellow</option>
    </select>
    
    <br>
    <label for="sex">Sex</label> 
    <input type = "radio" value = "F">
    <label for="F">Female</label>  
    <input type = "radio" value = "M">
    <label for="M">Male</label> <br>
    
    <label for="description">Description</label>
    <textarea name="cat[description]"><%= @cat.description%></textarea> 

